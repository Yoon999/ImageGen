<UserControl x:Class="ImageGen.Views.Controls.NodeGraphControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ImageGen.Views.Controls"
             xmlns:vm="clr-namespace:ImageGen.ViewModels"
             xmlns:helpers="clr-namespace:ImageGen.Helpers"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             PreviewMouseWheel="UserControl_PreviewMouseWheel"
             PreviewKeyDown="UserControl_PreviewKeyDown"
             Focusable="True">
    
    <UserControl.Resources>
        <helpers:ConnectionColorConverter x:Key="ConnectionColorConverter" />
        <helpers:NodeTypeToColorConverter x:Key="NodeTypeToColorConverter" />
        <helpers:NodeTypeToVisibilityConverter x:Key="NodeTypeToVisibilityConverter" />
        <helpers:NodeTypeToBooleanConverter x:Key="NodeTypeToBooleanConverter" />
        <helpers:MultiValueConverter x:Key="MultiValueConverter" />
        <helpers:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />
        
        <!-- Node Template -->
        <DataTemplate x:Key="NodeTemplate">
            <Border Background="{Binding Type, Converter={StaticResource NodeTypeToColorConverter}}" 
                    BorderBrush="#555" BorderThickness="1" CornerRadius="5" MinWidth="100" MaxWidth="250"
                    SizeChanged="Node_SizeChanged">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/> <!-- Input Port -->
                        <ColumnDefinition Width="*"/>    <!-- Content -->
                        <ColumnDefinition Width="Auto"/> <!-- Output Port -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Input Port -->
                    <StackPanel Grid.Column="0" VerticalAlignment="Center" Margin="-6,0,0,0">
                        <!-- Main Input (Flow) -->
                        <Ellipse Width="12" Height="12" Fill="Gray" Margin="0,2"
                                 Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=Input}"
                                 MouseLeftButtonDown="InputPort_MouseLeftButtonDown"
                                 ToolTip="Flow Input (Ctrl+Click to disconnect)"/>
                        
                        <!-- Base Input (Specific for Normal Node & BaseConcat) -->
                        <Ellipse Width="10" Height="10" Fill="#AAFFAA" Margin="0,2"
                                 Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=BaseInput}"
                                 ToolTip="Base Node Input"/>
                                 
                        <!-- Character Input (Specific for Normal Node) -->
                        <Ellipse Width="10" Height="10" Fill="#FFAAAA" Margin="0,2"
                                 Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=CharacterInput}"
                                 ToolTip="Character Node Input"/>
                    </StackPanel>
                    
                    <!-- Content -->
                    <StackPanel Grid.Column="1" Margin="10">
                        <!-- Header with Title and Collapse Button -->
                        <Grid Margin="0,0,0,5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <ui:TextBox Text="{Binding Title}" FontWeight="Bold" Foreground="White" Background="Transparent" BorderThickness="0" 
                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                     IsReadOnly="{Binding Type, Converter={StaticResource NodeTypeToBooleanConverter}, ConverterParameter=IsReadOnlyTitle}"
                                     Focusable="{Binding Type, Converter={StaticResource NodeTypeToBooleanConverter}, ConverterParameter=IsFocusable}"
                                     ToolTip="Double click to edit title"/>
                            
                            <!-- Simple Collapse Button -->
                            <ui:Button Grid.Column="1" Command="{Binding DataContext.ToggleCollapseCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                       Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=Collapse}" 
                                       CommandParameter="{Binding}" Width="20" Height="20" Margin="5,0,0,0" Padding="0" Background="Transparent" BorderThickness="0">
                                <ui:TextBlock Text="{Binding IsCollapsed, StringFormat={}{0:v;^}}" Foreground="White" FontSize="10"/>
                            </ui:Button>
                        </Grid>

                        <!-- Collapsible Content Area -->
                        <StackPanel Visibility="{Binding IsCollapsed, Converter={StaticResource BoolToVisibilityConverter}, ConverterParameter=Inverse}">
                            
                            <!-- Normal Node Content -->
                            <StackPanel Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=Content}">
                                <ui:TextBlock Text="Inputs connected via pins" Foreground="Gray" FontSize="10" FontStyle="Italic" HorizontalAlignment="Center"/>
                                
                                 <ui:Button Content="▶ Run Chain" Command="{Binding DataContext.GenerateChainCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                    CommandParameter="{Binding}" Margin="0,10,0,0" Background="#225522" FontSize="10" Padding="2" HorizontalAlignment="Right"/>
                            </StackPanel>

                            <!-- Base Node Content -->
                            <StackPanel Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=BaseContent}">
                                <ui:TextBlock Text="Positive Prompt" Foreground="Gray" FontSize="10"/>
                                <ui:TextBox Text="{Binding BasePrompt}" Margin="0,0,0,5" MinHeight="40" MaxHeight="120" TextAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" ClearButtonEnabled="False"/>
                                
                                <ui:TextBlock Text="Negative Prompt" Foreground="Gray" FontSize="10"/>
                                <ui:TextBox Text="{Binding NegativePrompt}" Margin="0,0,0,5" MinHeight="40" MaxHeight="120" TextAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" ClearButtonEnabled="False"/>
                            </StackPanel>

                            <!-- Character Node Content -->
                            <StackPanel Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=CharacterContent}">
                                <!-- Preset Selection -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <ComboBox ItemsSource="{Binding DataContext.CharacterPresets, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                              DisplayMemberPath="Name"
                                              Width="100" Margin="0,0,5,0"
                                              x:Name="PresetComboBox"/>
                                    <ui:Button Content="Load" 
                                            Command="{Binding DataContext.LoadCharacterPresetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            FontSize="10" Padding="2">
                                        <Button.CommandParameter>
                                            <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                <Binding Path="."/>
                                                <Binding ElementName="PresetComboBox" Path="SelectedItem"/>
                                            </MultiBinding>
                                        </Button.CommandParameter>
                                    </ui:Button>
                                    <ui:Button Content="Update" 
                                            Command="{Binding DataContext.UpdateCharacterPresetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            FontSize="10" Padding="2" Margin="5,0,0,0">
                                        <Button.CommandParameter>
                                            <MultiBinding Converter="{StaticResource MultiValueConverter}">
                                                <Binding Path="."/>
                                                <Binding ElementName="PresetComboBox" Path="SelectedItem"/>
                                            </MultiBinding>
                                        </Button.CommandParameter>
                                    </ui:Button>
                                </StackPanel>
                                
                                <!-- Preset Name Input & Save New -->
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                    <ui:TextBox Text="{Binding PresetName}" Width="100" Margin="0,0,5,0" ToolTip="Preset Name"/>
                                    <ui:Button Content="Save New" 
                                            Command="{Binding DataContext.SaveCharacterPresetCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding}"
                                            FontSize="10" Padding="2"/>
                                </StackPanel>

                                <ui:TextBlock Text="Positive Prompt" Foreground="Gray" FontSize="10"/>
                                <ui:TextBox Text="{Binding BasePrompt}" Margin="0,0,0,5" MinHeight="40" MaxHeight="120" TextAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" ClearButtonEnabled="False"/>
                                
                                <ui:TextBlock Text="Negative Prompt" Foreground="Gray" FontSize="10"/>
                                <ui:TextBox Text="{Binding NegativePrompt}" Margin="0,0,0,5" MinHeight="40" MaxHeight="120" TextAlignment="Left" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" ClearButtonEnabled="False"/>
                                
                                <Grid Margin="0,5,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Margin="0,0,2,0">
                                        <TextBlock Text="X" Foreground="Gray" FontSize="10"/>
                                        <TextBox Text="{Binding CharX}"/>
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" Margin="2,0,0,0">
                                        <TextBlock Text="Y" Foreground="Gray" FontSize="10"/>
                                        <TextBox Text="{Binding CharY}"/>
                                    </StackPanel>
                                </Grid>
                            </StackPanel>
                            
                            <!-- BaseConcat Node Content -->
                            <StackPanel Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=BaseConcatContent}">
                                <ui:TextBlock Text="Concatenates inputs from Base nodes" Foreground="Gray" FontSize="10" FontStyle="Italic" HorizontalAlignment="Center"/>
                                <ui:TextBlock Text="Output acts as a Base node" Foreground="Gray" FontSize="10" FontStyle="Italic" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                            </StackPanel>
                            
                            <!-- Graph Node Content -->
                            <StackPanel Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=GraphContent}">
                                <ui:TextBlock Text="Graph File Path" Foreground="Gray" FontSize="10"/>
                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBox Text="{Binding BasePrompt}" IsReadOnly="True" ToolTip="{Binding BasePrompt}"/>
                                    <ui:Button Grid.Column="1" Content="..." Command="{Binding DataContext.SelectGraphFileCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                            CommandParameter="{Binding}" Margin="5,0,0,0" Width="25"/>
                                </Grid>
                                <ui:TextBlock Text="Executes the selected graph" Foreground="Gray" FontSize="10" FontStyle="Italic" HorizontalAlignment="Center"/>
                            </StackPanel>

                            <!-- Action Buttons -->
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,5,0,0">
                                <!-- Duplicate Button -->
                                <ui:Button Content="Duplicate" Command="{Binding DataContext.DuplicateNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                        CommandParameter="{Binding}" Background="#222255" FontSize="10" Padding="2" Margin="0,0,5,0"
                                        Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=Delete}"/>
                                        
                                <!-- Delete Button (Hidden for Begin/End nodes) -->
                                <ui:Button Content="Delete" Command="{Binding DataContext.DeleteNodeCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                        CommandParameter="{Binding}" Background="#552222" FontSize="10" Padding="2"
                                        Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=Delete}"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Output Port -->
                    <ui:Button Grid.Column="2" Width="16" Height="16" Margin="0,0,-8,0" VerticalAlignment="Center"
                            Command="{Binding DataContext.StartConnectionCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                            CommandParameter="{Binding}"
                            ToolTip="Connect to next node (Ctrl+Click to disconnect)"
                            Visibility="{Binding Type, Converter={StaticResource NodeTypeToVisibilityConverter}, ConverterParameter=Output}"
                            PreviewMouseLeftButtonDown="OutputPort_MouseLeftButtonDown">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Ellipse Fill="{Binding NextNode, Converter={StaticResource ConnectionColorConverter}}" Stroke="White" StrokeThickness="1"/>
                            </ControlTemplate>
                        </Button.Template>
                    </ui:Button>
                </Grid>
            </Border>
        </DataTemplate>
    </UserControl.Resources>

    <Grid Background="#1e1e1e">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <!-- Toolbar -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="Save Graph" Command="{Binding SaveGraphCommand}" Margin="0,0,5,0"/>
            <Button Content="Load Graph" Command="{Binding LoadGraphCommand}" Margin="0,0,15,0"/>
            
            <Button Content="Add Node" Command="{Binding AddNodeCommand}" Margin="0,0,5,0"/>
            <Button Content="Add Base" Command="{Binding AddBaseNodeCommand}" Margin="0,0,5,0"/>
            <Button Content="Add Concat" Command="{Binding AddBaseConcatNodeCommand}" Margin="0,0,5,0"/>
            <Button Content="Add Character" Command="{Binding AddCharacterNodeCommand}" Margin="0,0,5,0"/>
            <Button Content="Add Graph" Command="{Binding AddGraphNodeCommand}" Margin="0,0,15,0"/>

            <Button Content="Run All" Command="{Binding GenerateChainCommand}" Margin="0,0,10,0" Background="#225522"/>
            
            <!-- Zoom Controls -->
            <Button Content="-" Command="{Binding ZoomOutCommand}" Width="25" Margin="0,0,5,0"/>
            <TextBlock Text="{Binding ZoomScale, StringFormat=P0}" VerticalAlignment="Center" Width="40" TextAlignment="Center"/>
            <Button Content="+" Command="{Binding ZoomInCommand}" Width="25" Margin="5,0,10,0"/>
            <Button Content="Reset" Command="{Binding ResetZoomCommand}" Margin="0,0,10,0"/>
            
            <TextBlock Text="Right click on canvas to add node, drag nodes to move." VerticalAlignment="Center" Foreground="Gray"/>
        </StackPanel>

        <Grid Grid.Row="1" ClipToBounds="True">
            <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" PanningMode="Both">
                <Grid Width="5000" Height="5000">
                    <Grid.LayoutTransform>
                        <ScaleTransform ScaleX="{Binding ZoomScale}" ScaleY="{Binding ZoomScale}"/>
                    </Grid.LayoutTransform>
                    
                    <!-- Connections Layer -->
                    <ItemsControl ItemsSource="{Binding Connections}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas IsHitTestVisible="False"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Line X1="{Binding X1}" Y1="{Binding Y1}"
                                      X2="{Binding X2}" Y2="{Binding Y2}"
                                      Stroke="White" StrokeThickness="2"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    
                    <!-- Temporary Connection Line (Dragging) -->
                    <Canvas IsHitTestVisible="False" Visibility="{Binding IsConnecting, Converter={StaticResource BoolToVisibilityConverter}}">
                        <Line X1="{Binding TempX1}" Y1="{Binding TempY1}"
                              X2="{Binding TempX2}" Y2="{Binding TempY2}"
                              Stroke="Yellow" StrokeThickness="2" StrokeDashArray="4 2"/>
                    </Canvas>

                    <!-- Nodes Layer -->
                    <ItemsControl ItemsSource="{Binding Nodes}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <Canvas Background="Transparent" MouseLeftButtonDown="Canvas_MouseLeftButtonDown" 
                                        MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemContainerStyle>
                            <Style TargetType="ContentPresenter">
                                <Setter Property="Canvas.Left" Value="{Binding UiX, Mode=TwoWay}"/>
                                <Setter Property="Canvas.Top" Value="{Binding UiY, Mode=TwoWay}"/>
                            </Style>
                        </ItemsControl.ItemContainerStyle>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <ContentControl Content="{Binding}" ContentTemplate="{StaticResource NodeTemplate}"
                                                MouseLeftButtonDown="Node_MouseLeftButtonDown"
                                                MouseLeftButtonUp="Node_MouseLeftButtonUp"/>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </Grid>
            </ScrollViewer>
        </Grid>
    </Grid>
</UserControl>
